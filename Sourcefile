set NAME "MCChallenges"
set DESC "A portable Minecraft challenge website"
set VERSION "git"
set HOMEPAGE ""
set CAT "anon"

set RDEPENDS {
	>=git-1.8
}

set git [exec which git]
set out /dev/stdout

proc fetch {} {
	if { [file exists deps/mongoose/] == 0 } {
		exec $::git clone git://github.com/valenok/mongoose deps/mongoose > $::out
	}
}

proc configure {} {
	exec bundle install > $::out
}

proc build {} {
	exec make -C deps/mongoose linux_lua CFLAGS=-lm\ -lpthread > $::out
}

proc install {} {
}

